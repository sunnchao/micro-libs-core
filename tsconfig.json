{
  "compilerOptions": {
    "target": "ESNext",
    // "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
//    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["./src/types/*"]
    },
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "./src/utils/**/*",
    "./src/router/**/*",
    "./src/types/**/*",
    "./node_modules/@types/**/*",
    "package.json"
  ],
  "exclude": ["node_modules", "dist"]
}
