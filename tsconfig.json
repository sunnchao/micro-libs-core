{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["./types/*"]
    },
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "composite": true
  },
  "include": [
    "./utils/**/*",
    "./router/**/*",
    "./types/**/*",
    "./node_modules/@types/**/*",
  ],
  "exclude": ["node_modules/"]
}
