{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
  },
  "include": [
    //    "src/components/**/*.vue",
    //    "src/components/**/*.ts",
    //    "src/components/**/*.tsx",
    //    "src/components/**/*.d.ts",
    //    "src/utils/**/*.ts",
    //    "src/utils/**/*.tsx",
    //    "src/utils/**/*.d.ts",
    //    "src/router/**/*.ts",
    //    "src/router/**/*.tsx",
    //    "src/router/**/*.d.ts",
    //    "src/hooks/**/*.ts",
    //    "src/hooks/**/*.tsx",
    //    "src/hooks/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "types/**/*.d.ts",
  ],
  "exclude": ["node_modules", "dist"],
}
